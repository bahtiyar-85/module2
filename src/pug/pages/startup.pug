extends ../layout/layout.pug
include ../modules/mixins.pug

block variables
    - var pageTitle = "Тренинги"
    - var mainTitle = "Разрабатываем маркетинг-план: дорожная карта достижения целей"
    - var btnTitle = "подробнее"
    - var btnForm = "получить консультацию"
    - const crumb = ["Главная","/","Услуги","/","Разрабатываем маркетинг-план: дорожная карта достижения целей"]
    -
        const listTargets = [
            "Делаем прогноз развития рынка",
            "Проводим сравнительный анализ стратегий конкурентов",
            "Определяем точки роста",
            "Ставим объективные цели",
            "Разрабатываем план и модель контроля его выполнения"
        ]  
    -   
        const service = { 
            title: "Описание услуги",
            list: 
            [
                "Любая компания ставит себе цель непрерывного развития, которая отражается в итоговом плане действий по ее достижению. Основным измерением достижения цели является рост прибыли по результатам планируемого периода. Понимание траектории развития рынка, положения и стратегий его основных участников, позволяет правильно оценить свои возможности и поставить объективно достижимые цели.",
                "Конкретный план действий по достижению целей разрабатывается на основе потребительских трендов и прогноза действий конкурентов.",
                "Математическая модель контроля позволяет на основе сравнения плановых и фактических измеряемых величин контролировать ситуацию и своевременно предпринимать необходимые действия.",
            ]
        }  
    -   
        const developStages = { 
            title: "Основные этапы разработки ",
            list: 
            [
                "Интервью с сотрудниками компании и потребителями",
                "Сбор информации о рынках из открытых источников",
                "Анализ внешней информации: SWOT, BCG, сравнительный анализ по ",
                "Анализ внутренней информации: динамика основных показателей с определением причин изменений",
                "Совместное обсуждение целей и плана действий"
            ],
            links: 
            [
                "маркетинг-плана",
                "4Р маркетинга"
            ]
        }  
 
block content
    .container
        +breadcrumbs(crumb)
        +brokenCube
        h2.marketing-header__title= mainTitle
        .row.marketing_margin
            .col-12
                +listWithIcon(listTargets)
        h1.startup__service-title= service.title
        .startup__service-contant
            for i in service.list 
                p.startup__service-text= i
            p.startup__service-text
                | #{developStages.title}
                a(href="#").startup__service-link= developStages.links[0]
                | :
            ul.topic__list.startup__service-list
                each item, index in developStages.list
                    if index == 2
                        li.topic__item-marker
                            | #{item}
                            a(href="#").startup__service-link= developStages.links[1]
                            |
                    else
                        li.topic__item-marker= item 

        +modalConsult
        